
<div class="row " style="padding-top:20px;padding-bottom:20px">
    <div class="col-lg-12">
        <div class="bs-component">
            @using (Html.BeginForm("List", "Home", FormMethod.Get))
            {
              
            <div>
                <label class="control-label" for="title" >Title:</label>
                <input type="text" id="title" name="title" class="input-small" required>
                &nbsp;&nbsp;
                <label class="control-label" for="year">Year:</label>
                <input type="text" id="year" name="year" class="input-small" style="width: 100px;">
                &nbsp;&nbsp;
                <label class="control-label">Type:</label>
                <select name="type" style="width: 100px;">
                    <option value="movie" selected="">Movie</option>
                    <option value="series">Series</option>
                    <option value="episode">Episode</option>
                </select>

                &nbsp;&nbsp;
                <input id="search-by-title-button" type="submit" class="btn-sm btn-primary" value="Search">
                <button id="search-by-title-reset" type="reset" class="btn-sm">Reset</button>
               
            </div>


            }
        </div>
    </div>

</div>
